{
  "variables": {
    "account_json": "{{env `packer_account_json`}}",
    "instance_name": "hdqc-url-redirector-{{timestamp}}",
    "image_name": "testing-hdqc-url-redirector-{{timestamp}}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `account_json`}}",
      "project_id": "united-course-124523",
      "source_image": "debian-8-jessie-v20160718",
      "zone": "us-central1-a",
      "instance_name": "{{user `instance_name`}}",
      "image_name": "{{user `image_name`}}",
      "image_description": "Nginx Server.",
      "communicator": "ssh",
      "ssh_username": "nginxadmin"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 3",
        "echo \"slept for 3 seconds.\""
      ]
    },
    {
      "type": "file",
      "source": "install-nginx.sh",
      "destination": "install-nginx.sh"
    },
    {
      "type": "shell",
      "script": "install-nginx.sh",
      "pause_before": "10s"
    },
    {
      "type": "file",
      "source": "configure-ufw-www-ssh.sh",
      "destination": "configure-ufw-www-ssh.sh"
    },
    {
      "type": "shell",
      "script": "configure-ufw-www-ssh.sh",
      "pause_before": "10s"
    },
    {
      "type": "file",
      "source": "nginx.conf",
      "destination": "nginx.temp"
    }
  ]
}
